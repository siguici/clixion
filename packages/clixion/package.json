{
  "name": "clixion",
  "type": "module",
  "license": "MIT",
  "version": "0.0.0",
  "description": "A flexible framework for building CLI applications",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "pnpm check && tsup-node --env.NODE_ENV production",
    "start": "tsup-node --env.NODE_ENV development --watch",
    "test": "NODE_ENV=test node --loader tsm --enable-source-maps bin/test.ts"
  },
  "author": "Sigui Kess√© Emmanuel <siguici@proton.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/siguici/clixion",
    "directory": "packages/clixion"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./console": {
      "types": "./dist/console.d.ts",
      "import": "./dist/console.js",
      "require": "./dist/console.cjs",
      "default": "./dist/console.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs",
      "default": "./dist/core.js"
    },
    "./pm": {
      "types": "./dist/pm.d.ts",
      "import": "./dist/pm.js",
      "require": "./dist/pm.cjs",
      "default": "./dist/pm.js"
    },
    "./process": {
      "types": "./dist/process.d.ts",
      "import": "./dist/process.js",
      "require": "./dist/process.cjs",
      "default": "./dist/process.js"
    },
    "./tester": {
      "types": "./dist/tester.d.ts",
      "import": "./dist/tester.js",
      "require": "./dist/tester.cjs",
      "default": "./dist/tester.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs",
      "default": "./dist/utils.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "cli",
    "cli-app",
    "clixion",
    "console",
    "command-line",
    "create-cli-app",
    "framework",
    "generator"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": "https://github.com/@QwikDev/astro/issues",
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "cross-spawn": "^7.0.6",
    "fs-extra": "^11.3.0",
    "kleur": "^4.1.5",
    "which": "^5.0.0",
    "which-pm-runs": "^1.1.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@japa/assert": "^4.0.1",
    "@japa/runner": "^4.2.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.0",
    "@types/which": "^3.0.4",
    "@types/which-pm-runs": "^1.0.2",
    "@types/yargs": "^17.0.33",
    "tslib": "^2.8.1",
    "tsm": "^2.3.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
